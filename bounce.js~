var ball = function() {
    var x = 0;
    var y = 0;

    var incX = function () {
	x=x+1;
    }
    var incY = function () {
	y=y+1;
    }
    var getX = function() {
	return x;
    }
    var getY = function() {
	return y;
    }
    

    return {
	incX : incX,
	decX : decX,
	incY : incY,
	decY : decY,
	getX : getX,
	getY : getY
    };
};
